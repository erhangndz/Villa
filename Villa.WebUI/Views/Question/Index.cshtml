
@model List<ResultQuestDto>
@{
    ViewData["Title"] = "Soru-Cevap ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Soru</th>
        <th>Cevap</th>
       
        <th></th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Question</td>
            <td>@item.Answer</td>
           

            <td>
                <button onclick="deleteQuestion(this)" id="@item.Id" class="btn btn-outline-danger">Sil</button>
                <a asp-controller="Question" asp-action="UpdateQuestion" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a asp-controller="Question" asp-action="CreateQuestion" class="btn btn-outline-dark">Yeni Soru-Cevap Ekle</a>



<script>
    function deleteQuestion(button) {
        var id = button.getAttribute("id");
        Swal.fire({

            title: 'Silmek istediğinize emin misiniz?',
            text: 'Bu işlemi geri alamazsınız!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Question/DeleteQuestion/" + id;
            }
        });
    };




</script>


